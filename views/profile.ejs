<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pinteresting - Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar d-flex justify-content-between px-4">
    <img src="/images/logo.png" alt="Pinteresting Logo">
    <div>
      <!-- Upload Button triggers Modal -->
      <button class="btn btn-custom me-2" data-bs-toggle="modal" data-bs-target="#uploadModal">
        Upload Image
      </button>
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
  </nav>

  <!-- Profile Content -->
  <div class="ourcontainer mt-2 text-center">
    <h2 class="fw-semibold text-white">Welcome, <%= user.fullname %> ðŸ‘‹</h2>
    <p class="text-light">You can Upload, Download and Delete Images here.</p>
  </div>
  <!-- File Cards -->
  <div class="container">
    <div class="cards">
      <% user.posts.forEach(function(post){ %>
        <div class="card" style="width: 18rem;">
          <img src="<%= post.image%>" class="card-img-top" alt="<%= post.imageText%>">
          <div class="card-body">
           <h5 class="card-title"><%= post.imageText%></h5>
           <div class="del-down-btns">
            <a href="<%= post.image%>" download="<%= post.image %>" id="download"><img src="/images/download.svg" alt="Download Icon"></a>
            <form action="/delete/<%= post._id %>" method="POST" style="display: inline;">
              <button type="submit" id="delete"><img src="/images/deletebtn.png" alt="Delete Icon"></button>
            </form>
           </div>
          </div>
        </div>
      <%  }) %>
    </div>
  </div>
  <!-- Upload Modal -->
  <div class="modal fade" id="uploadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content card p-4">
        <h4 class="fw-bold text-center mb-3">Upload Image</h4>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Select File</label>
            <input type="file" name="file" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Caption</label>
            <input type="text" name="caption" placeholder="Enter Caption" class="form-control" required>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-custom">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
